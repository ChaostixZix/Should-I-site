---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout title="Privacy Policy">
	<Section class="py-20 lg:py-32">
		<div class="max-w-3xl mx-auto">
			<h1 class="text-4xl font-bold mb-8">Privacy Policy</h1>
			<p class="text-[var(--text-muted)] mb-6">Last updated: January 15, 2026</p>
			
			<div class="prose prose-slate max-w-none">
				<p>Your privacy is important to us. It is Should-I's policy to respect your privacy regarding any information we may collect from you across our website, https://www.should-i.ai, and other sites we own and operate.</p>
				<!-- Add more privacy content as needed -->
			</div>
		</div>
	</Section>
</BaseLayout>
