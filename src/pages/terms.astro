---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout title="Terms of Service">
	<Section class="py-20 lg:py-32">
		<div class="max-w-3xl mx-auto">
			<h1 class="text-4xl font-bold mb-8">Terms of Service</h1>
			<p class="text-[var(--text-muted)] mb-6">Last updated: January 15, 2026</p>
			
			<div class="prose prose-slate max-w-none">
				<p>By accessing our website, you are agreeing to be bound by these terms of service, all applicable laws and regulations, and agree that you are responsible for compliance with any applicable local laws.</p>
				<!-- Add more terms content as needed -->
			</div>
		</div>
	</Section>
</BaseLayout>
