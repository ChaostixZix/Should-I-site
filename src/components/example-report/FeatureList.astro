  <div class="space-y-12">
    {features.map(feature => (
      <div>
        <h3 class="text-xl font-bold text-[var(--text)] mb-3">
          {feature.title}
        </h3>
        <p class="text-lg text-[var(--text-muted)] leading-relaxed max-w-3xl">
          {feature.desc}
        </p>
      </div>
    ))}
  </div>
