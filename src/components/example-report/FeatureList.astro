const features = [
  {
    title: "Local demand analysis",
    desc: "How much real demand exists within practical reach of the business, based on how customers actually behave — not just population totals."
  },
  {
    title: "Catchment and accessibility assessment",
    desc: "How far customers are realistically willing to travel, and how location, access, and surrounding infrastructure affect viability."
  },
  {
    title: "Customer persona composition",
    desc: "Who the dominant customer types are in the area, what they value, and how that shapes pricing power and positioning."
  },
  {
    title: "Competitive landscape and saturation",
    desc: "A full view of direct and indirect competitors, including density, clustering, and structural limits on growth."
  },
  {
    title: "Economic and viability signals",
    desc: "Cost pressures, margin sensitivity, and conditions that reduce tolerance for error — even when the idea itself appears sound."
