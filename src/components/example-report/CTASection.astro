---
interface Props {
  href?: string;
}

const { href = "https://go.should-i.ai/health-check" } = Astro.props;
---

<div class="py-24 text-center">
  <div class="mb-12 border-b border-[var(--border)] w-16 mx-auto"></div>
  
  <a 
    href={href}
    class="inline-flex items-center justify-center px-8 py-4 text-sm font-bold text-white bg-[var(--accent)] rounded hover:opacity-90 transition-opacity tracking-wide"
  >
    Start Your Health Check
  </a>
</div>
