---
interface Props {
	href: string;
	variant?: 'primary' | 'secondary';
	class?: string;
}

const { href, variant = 'primary', class: className = "" } = Astro.props;

const baseStyles = "flex items-center justify-center rounded transition font-bold";
const variants = {
	primary: "bg-[var(--accent)] px-8 py-4 text-white hover:opacity-90",
	secondary: "border border-[var(--border)] bg-white px-8 py-4 text-[var(--text)] hover:border-gray-400 font-medium",
};
---

<a href={href} class:list={[baseStyles, variants[variant], className]}>
	<slot />
</a>
