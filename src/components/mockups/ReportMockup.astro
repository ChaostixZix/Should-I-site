---
interface Props {
  businessName?: string;
  location?: string;
  score?: number;
  class?: string;
}

const { 
  businessName = "Excel Laundry’s", 
  location = "Jindalee, 3074", 
  score = 65,
  class: className 
} = Astro.props;
---

<div class:list={["relative w-full max-w-[550px] bg-white border border-[var(--border)] rounded-2xl overflow-hidden flex flex-col shadow-2xl", className]}>
  
  <!-- App Header (Dark) -->
  <div class="bg-slate-900 text-white p-8 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute -right-10 -top-10 size-40 rounded-full bg-blue-500 blur-3xl"></div>
    </div>
    
    <div class="relative z-10">
      <div class="text-sm font-bold tracking-tight mb-6">
        Should<span class="text-blue-400">I</span>
      </div>

      <div class="flex justify-between items-start gap-4">
        <div>
          <div class="text-3xl font-bold leading-tight mb-2">{businessName}</div>
          <div class="text-xs text-slate-400 font-light tracking-wide">Market Validation Report – {location}</div>
        </div>

        <!-- Score Badge -->
        <div class="flex flex-col items-center">
          <div class="text-[8px] font-bold text-slate-500 uppercase tracking-widest mb-1">Market Score</div>
          <div class="size-16 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex flex-col items-center justify-center ring-2 ring-blue-400/30">
            <div class="text-lg font-bold">{score}</div>
            <div class="text-[6px] opacity-70">out of 100</div>
          </div>
        </div>
      </div>

      <!-- Meta info grid -->
      <div class="grid grid-cols-2 gap-4 mt-8 pt-4 border-t border-white/10 opacity-60">
        <div class="space-y-1">
          <div class="text-[8px] uppercase tracking-wider font-medium text-slate-400">Location</div>
          <div class="text-[10px] font-medium">{location}</div>
        </div>
        <div class="space-y-1">
          <div class="text-[8px] uppercase tracking-wider font-medium text-slate-400">Report Date</div>
          <div class="text-[10px] font-medium">January 2026</div>
        </div>
      </div>
    </div>
  </div>

  <!-- App Body (White) -->
  <div class="p-8 flex flex-col gap-6">
    <!-- Executive Summary Skeleton -->
    <div class="space-y-4">
      <div class="border-b-2 border-primary/10 pb-2 flex items-center gap-2">
        <div class="size-1.5 rounded-full bg-[var(--accent)]"></div>
        <div class="text-[10px] font-bold uppercase tracking-widest text-[var(--accent)]">Executive Summary</div>
      </div>
      
      <div class="space-y-3 opacity-60">
        <div class="h-2 w-full bg-slate-100 rounded-sm"></div>
        <div class="h-2 w-full bg-slate-100 rounded-sm"></div>
        <div class="h-2 w-full bg-slate-100 rounded-sm"></div>
        <div class="h-2 w-2/3 bg-slate-100 rounded-sm"></div>
      </div>

      <div class="space-y-3 opacity-60 mt-6">
        <div class="h-2 w-full bg-slate-100 rounded-sm"></div>
        <div class="h-2 w-3/4 bg-slate-100 rounded-sm"></div>
      </div>
    </div>

    <!-- Mini Stats Row -->
    <div class="grid grid-cols-2 gap-4 mt-2">
      <div class="bg-slate-50 p-4 rounded-xl border border-slate-100">
        <div class="h-1.5 w-8 bg-[var(--accent)]/30 rounded mb-2"></div>
        <div class="text-2xl font-black text-slate-900 tracking-tight italic">78%</div>
      </div>
      <div class="bg-slate-50 p-4 rounded-xl border border-slate-100">
        <div class="h-1.5 w-10 bg-slate-200 rounded mb-3"></div>
        <div class="grid grid-cols-4 gap-1.5">
          <div class="size-1 rounded-full bg-slate-200"></div>
          <div class="size-1 rounded-full bg-slate-200"></div>
          <div class="size-1 rounded-full bg-[var(--accent)]"></div>
          <div class="size-1 rounded-full bg-slate-200"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Decor -->
  <div class="mt-auto px-8 pb-4 flex justify-center opacity-20">
    <div class="h-1 w-1/4 bg-slate-300 rounded-full"></div>
  </div>
</div>
